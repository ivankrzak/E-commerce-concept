{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src/" 
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "@types", "src", "global.d.ts", "next.config.js"],
  "exclude": ["node_modules"],
}
